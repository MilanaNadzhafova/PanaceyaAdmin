@model IEnumerable<Panaceya.Models.Categories>

@{
    ViewBag.Title = "Index";
}

<h2>Категории</h2>

@*<p>
        @Html.ActionLink("Создать категорию", "Create")
    </p>*@

<table class="table">
    <tr class="paragraph">
        <th>
            Название
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.ID_Category }) |
                @Html.ActionLink("Информация", "Details", new { id = item.ID_Category }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.ID_Category })
            </td>
        </tr>
    }

</table>
<button class="go" onclick="location.href = '/Categories/Create';">Добавить категорию &raquo;</button>