@model IEnumerable<Panaceya.Models.Pharmacies>

@{
    ViewBag.Title = "Index";
}

<h2>Точки выдачи лекарств</h2>

@*<p>
        @Html.ActionLink("Добавить точку выдачи", "Create")
    </p>*@
<table class="table">
    <tr class="paragraph">
        <th>
            Название
        </th>
        <th>
            Адрес
        </th>
        <th>
            Время работы
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time_Work)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.ID_Pharm }) |
                @Html.ActionLink("Информация", "Details", new { id = item.ID_Pharm }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.ID_Pharm })
            </td>
        </tr>
    }

</table>
<button class="go" onclick="location.href = '/Pharmacies/Create';">Добавить точку выдачи &raquo;</button>
